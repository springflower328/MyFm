<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_bg">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView_myfm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:paddingBottom="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/single_tv_img" />

            <RelativeLayout
                android:id="@+id/relativelayout_myfm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView_myfm"
                android:layout_marginBottom="10dp"
                android:background="@drawable/card_view">

                <RelativeLayout
                    android:id="@+id/relativelayout_textView_myfm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/card_view">

                    <TextView
                        android:id="@+id/textView_title_myfm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/radio_fm"
                        android:textColor="@color/text_myfm"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativelayout_textView_myfm"
                    android:padding="10dp"
                    android:weightSum="3">

                    <View
                        android:id="@+id/view_top_myfm"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bdr_1" />

                    <LinearLayout
                        android:id="@+id/linearlayout_myfm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_top_myfm"
                        android:layout_marginTop="5dp">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bdr_2" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView_timer_myfm"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_timer" />

                            <TextView
                                android:id="@+id/textView_timer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageView_timer_myfm"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:textSize="10sp"
                                android:textColor="@color/white"
                                android:background="@drawable/bg_time"
                                android:padding="5dp"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/textView_stoptimer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageView_timer_myfm"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:text="@string/textView_stop_timer_myfm"
                                android:textColor="@color/text_myfm" />

                        </RelativeLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bdr_2" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView_play_myfm"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_play" />

                            <ProgressBar
                                android:id="@+id/ProgressBar_myfm"
                                android:layout_width="50dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true" />

                            <TextView
                                android:id="@+id/textView_play_myfm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageView_play_myfm"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:text="@string/textView_play_myfm"
                                android:textColor="@color/text_myfm" />

                        </RelativeLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bdr_2" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView_record_myfm"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_rac" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageView_record_myfm"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:text="@string/textView_recording_myfm"
                                android:textColor="@color/text_myfm" />

                        </RelativeLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bdr_2" />

                    </LinearLayout>

                    <View
                        android:id="@+id/view_bottom_myfm"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/linearlayout_myfm"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bdr_1" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relativelayout_myfm"
                android:background="@drawable/card_view">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5dp"
                    android:padding="10dp"
                    android:text="Details About the fm"
                    android:textColor="@color/text_myfm" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>