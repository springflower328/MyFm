<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/toolbar"
    android:padding="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/status_bar_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center" />

    <TextView
        android:id="@+id/status_bar_track_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/status_bar_icon"
        android:layout_toRightOf="@+id/status_bar_icon"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/text_statusBar"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/status_bar_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="#00000000"
        android:layout_toLeftOf="@+id/status_bar_collapse"
        android:layout_toStartOf="@+id/status_bar_collapse" />

    <ImageButton
        android:id="@+id/status_bar_collapse"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="#00000000"
        android:src="@drawable/ic_close" />

</RelativeLayout>